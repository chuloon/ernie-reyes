@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section AddToHead {
    <link type="text/css" rel="stylesheet" href="~/Content/stylesheets/schedule.css" />
}

<!-- ko if: scheduleData() !== undefined -->

<div class="row">
    <div class="col-xs-12">
        <div class="panel">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <!-- ko foreach: dayArray -->
                                <th data-bind="text: $data"></th>
                                <!-- /ko -->
                            </tr>
                        </thead>
                        <tbody>
                            <!-- ko foreach: timeArray -->
                            <tr>
                                <td class="time-column" data-bind="html: '<h4>' + $data + '</h4>'"></td>
                                <td class="schedule-item" data-bind="html: '<h4>' + $parent.scheduleData().monday[$data].className + '</h4><span>' + $parent.scheduleData().monday[$data].ageGroup + '</span>'"></td>
                                <td class="schedule-item" data-bind="html: '<h4>' + $parent.scheduleData().tuesday[$data].className + '</h4><span>' + $parent.scheduleData().tuesday[$data].ageGroup + '</span>'"></td>
                                <td class="schedule-item" data-bind="html: '<h4>' + $parent.scheduleData().wednesday[$data].className + '</h4><span>' + $parent.scheduleData().wednesday[$data].ageGroup + '</span>'"></td>
                                <td class="schedule-item" data-bind="html: '<h4>' + $parent.scheduleData().thursday[$data].className + '</h4><span>' + $parent.scheduleData().thursday[$data].ageGroup + '</span>'"></td>
                                <td class="schedule-item" data-bind="html: '<h4>' + $parent.scheduleData().friday[$data].className + '</h4><span>' + $parent.scheduleData().friday[$data].ageGroup + '</span>'"></td>
                                <td class="schedule-item" data-bind="html: '<span>' + $parent.scheduleData().saturday[$data].altTime + '</span><h4>' + $parent.scheduleData().saturday[$data].className + '</h4><span>' + $parent.scheduleData().saturday[$data].ageGroup + '</span>'"></td>
                            </tr>
                            <!-- /ko -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /ko -->

<script type="text/javascript" src="~/Scripts/Pages/Schedule.js"></script>